<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emergency_supply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#111"
    tools:context="com.drbt.earthquakesafetyapp.emergencySupply">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.Have disaster supplies on hand."
                android:textSize="22dp"
                android:id="@+id/text1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00CA74"
                android:text="See video tutorial"
                android:textColor="#fff"
                android:layout_above="@+id/saveMeBtn"
                android:layout_marginBottom="10dp"
                android:id="@+id/video"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/text1"
                android:onClick=""/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#028482"
                android:text="Buy a pre made safety kit"
                android:textColor="#fff"
                android:layout_above="@+id/saveMeBtn"
                android:layout_marginBottom="10dp"

                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/text1"
                android:onClick=""/>


            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="or make one at home"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Flashlight and extra batteries"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Portable, battery-operated radio and extra batteries"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- First aid kit and manual"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Emergency food and water"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>


            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Non-electric can opener"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Essential medicines"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Cash and credit cards"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Sturdy shoes"
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>





















        </LinearLayout>
    </ScrollView>

</RelativeLayout>
