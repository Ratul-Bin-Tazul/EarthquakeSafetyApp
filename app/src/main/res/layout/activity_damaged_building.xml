<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_damaged_building"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#111"
    tools:context="com.drbt.earthquakesafetyapp.damagedBuilding">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Stay out of damaged buildings"
                android:textSize="24dp"
                android:id="@+id/text1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00CA74"
                android:text="See video tutorial"
                android:textColor="#fff"
                android:layout_above="@+id/saveMeBtn"
                android:layout_marginBottom="10dp"
                android:id="@+id/video"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/text1"
                />

            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Use the telephone only for emergency calls."
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/textView" />

            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Clean up spilled medicines, bleaches or gasoline or other flammable liquids immediately. Leave the area if you smell gas or fumes from other chemicals."
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>



            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Open closet and cupboard doors cautiously."
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/textView2" />

            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Inspect the entire length of chimneys carefully for damage. Unnoticed damage could lead to a fire."
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/textView3" />

            <TextView
                style="@style/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Return home only when authorities say it is safe."
                android:textSize="18dp"
                android:layout_below="@+id/video"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                />











        </LinearLayout>
    </ScrollView>



</RelativeLayout>
